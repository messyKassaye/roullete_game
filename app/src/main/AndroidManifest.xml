<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meseret.roulette">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".CustomLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_custom_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Add_Referral_code"
            android:label="@string/title_activity_add__referral_code"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomProfile"
            android:label="@string/title_activity_custom_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WaiterActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_waiter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GameDisplay"
            android:label="@string/title_activity_game_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyCommission"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_my_commission"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyLevels"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_my_levels"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChipsMarket"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_chips_market"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait" android:configChanges="orientation|screenSize"
            android:name=".MainProfile"
            android:label="@string/title_activity_main_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".GameScene"
            android:label="@string/title_activity_game_scene"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Withdrawal"
            android:label="@string/title_activity_withdrawal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".TestAct"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>